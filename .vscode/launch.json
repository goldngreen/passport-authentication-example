{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${env:NODE_PATH}/mocha/bin/_mocha",
            "args": [ "-u", "bdd", "--timeout", "999999", "--colors", "${workspaceFolder}/node_modules/test/tests/**/*.js" ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [ "<node_internals>/**" ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/node_modules/server/server.js",
            "skipFiles": [ "<node_internals>/**" ]
        }
    ]
}